<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.edu.food_blog">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.FoodDetailActivity"
            android:theme="@style/FoodTheme" />
        <activity android:name=".activity.FoodListActivity"
            android:theme="@style/FoodTheme" />
        <activity android:name=".activity.FoodBlogActivity"
            android:theme="@style/FoodTheme" />
<!--       windowSoftInputMode可调整沉浸式状态栏避免布局变形  -->
        <activity android:name=".activity.FoodBlogAdditionActivity"
            android:theme="@style/FoodTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.MainActivity"
            android:theme="@style/FoodTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>